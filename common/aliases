# Directory change shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Most used commands
alias grep='grep --color'
alias ll='ls -ltra'
alias ls='ls -F --color'
alias h='history'
alias vi='vim'

# Process related
alias psall='ps -auxww '
alias ppid='ps -o ppid= -p '

# Git related
alias gs='git status'
alias gl='git log'
alias gc='git checkout'
alias ga='git add'
alias gcm='git commit -m'
alias gpu='git push'
alias gp='git pull'
