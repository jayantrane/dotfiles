# Directory change shortcuts
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Most used commands
alias grep='grep --color'
alias ll='ls -ltra'
alias ls='ls -F --color'
alias h='history'
alias vi='vim'

# Process related
alias psall='ps -auxww '
alias ppid='ps -o ppid= -p '

# Git related
alias gs='git status'
alias gl='git log'
alias co='git checkout'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit'
alias gcm='git commit -m'

# Git Analysis
alias gd='git diff'

# Git modifications
alias greb='git rebase -i'

# Github
alias gp='git pull'
alias gpu='git push'
